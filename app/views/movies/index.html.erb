<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Files</th>
      <th>Age</th>
      <th>Seed</th>
      <th>Leech</th>
      <th>Imdb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.size %></td>
        <td><%= movie.files %></td>
        <td><%= movie.age %></td>
        <td><%= movie.seed %></td>
        <td><%= movie.leech %></td>
        <td><%= movie.imdb || 0 %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @movies %>

<br>

