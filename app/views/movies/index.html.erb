<p id="notice"><%= notice %></p>

<h1>KAT Movies</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>size</th>
      <th>Files</th>
      <th>age</th>
      <th>seed</th>
      <th>leech</th>
      <th>imdb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.name, movie.link %></td>
        <td><%= number_to_human_size(movie.size) %></td>
        <td><%= movie.files %></td>
        <td><%= movie.age %></td>
        <td><%= movie.seed %></td>
        <td><%= movie.leech %></td>
        <td><%= movie.imdb || 0 %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @movies %>

