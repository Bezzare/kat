<p id="notice"><%= notice %></p>

<h1>KAT Movies</h1>

<%= form_tag movies_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "size" %></th>
      <th class="current">Files</th>
      <th><%= sortable "age" %></th>
      <th><%= sortable "seed" %></th>
      <th><%= sortable "leech" %></th>
      <th><%= sortable "imdb", "IMDB" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.size %></td>
        <td><%= movie.files %></td>
        <td><%= movie.age %></td>
        <td><%= movie.seed %></td>
        <td><%= movie.leech %></td>
        <td><%= movie.imdb || 0 %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @movies %>

<br>

<%= link_to 'New Movie', new_movie_path %>
